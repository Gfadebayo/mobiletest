<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeOverlay.Map" parent="">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="ShapeOverlay.Profile" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/sf_pro_bold</item>
    </style>

    <style name="TextAppearance.Profile" parent="">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextAppearance.Tab" parent="">
        <item name="android:textColor">@color/tab_unselected</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextAppearance.Tab.Selected" parent="">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextAppearance.RideInfo" parent="">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar.NoHeight" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:minHeight">0dp</item>
        <item name="titleMargin">0dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="Button.NoHeight" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Button.Filter" parent="Button.NoHeight">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/filter_text</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="icon">@drawable/ic_filter</item>
        <item name="iconPadding">5dp</item>
        <item name="iconGravity">textStart</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabLayout.Ride" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/transparent</item>
<!--        <item name="tabMode">scrollable</item>-->
        <item name="tabMinWidth">0dp</item>
        <item name="tabIndicatorAnimationMode">linear</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabPaddingBottom">-16dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.Tab</item>
        <item name="tabTextColor">@color/tab_unselected</item>
        <item name="tabSelectedTextColor">@color/tab_selected</item>
        <item name="tabIndicatorColor">@color/tab_selected</item>
    </style>

    <style name="Spinner.Filter" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@drawable/shape_spinner_background</item>
        <item name="android:backgroundTint">@color/spinner_background</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">@color/spinner_background</item>
        <item name="android:popupTheme">@style/Popup.Spinner</item>
    </style>

    <style name="Popup.Spinner" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
</resources>